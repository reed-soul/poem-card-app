{
  "appId": "com.reedsoul.poem-calendar",
  "productName": "诗词日历",
  "directories": {
    "output": "release"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.lifestyle",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}